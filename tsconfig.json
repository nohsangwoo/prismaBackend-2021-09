{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonJs",
    "rootDir": "src",
    "outDir": "./build",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowJs": true
  }
}
